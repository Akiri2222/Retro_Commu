<div class="container">
  <div class="row">
    <div class="col-md-2">
      <%= render 'admin/genres/index', genres: @genres %>
      <%= render 'admin/tags/index', tags: @tags %>
    </div>
    <div class="col-md-9 offset-md-1">
      <% @genre.posts.each do |post| %>
        <div class="card" style="width: 45rem;">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to post_path(post.id) do %>
                <%= post.title %>
              <% end %>
            </h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= post.genre.name %></h6>
            <p class="card-text"><%= post.text %></p>
            <div class="d-flex">
              <i class="fas fa-tag"></i>
              <p class = "px-2">
                <% post.tags.each_with_index do |tag, i| %>
                  <%= link_to admin_tag_path(tag.id) do %>
                    <%= tag.name %>
                  <% end %>
                  <%= post.tags[i+1].present? ? ',' : '' %>
                <% end %>
              </p>
            </div>
            <p>コメント数：<%= post.comments.count %>件</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>