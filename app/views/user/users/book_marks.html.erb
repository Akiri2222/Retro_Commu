<div class="container">
  <div class="row">
    <div class="col">
      <h5>ブックマークした投稿一覧</h5>
      <table class="table table-borderless">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>ジャンル</th>
            <th>本文</th>
          </tr>
        </thead>
        <% @book_mark_posts.reverse_each do |post|%>
          <tbody>
            <tr>
              <td>
                <%= link_to post_path(post.id) do %>
                  <%= post.title %>
                <% end %>
              </td>
              <td><%= post.genre.name %></td>
              <td><%= post.text %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>