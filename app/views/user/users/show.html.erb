<div class="container">
  <div class="row">
    <div class="col">
      <h4><%= @user.account_name %>のマイページ</h4>
      <table class="table table-bordered">
        <% if current_user.id == @user.id %>
          <tr>
            <td class="table-active">名前</td>
            <td><%= @user.name %></td>
          </tr>
        <% end %>
        <tr>
          <td class="table-active">アカウント名</td>
          <td><%= @user.account_name %></td>
        </tr>
        <% if current_user.id == @user.id %>
          <tr>
            <td class="table-active">メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
        <% end %>
        <tr>
          <td class="table-active">自己紹介</td>
          <td><%= @user.biography %></td>
        </tr>
      </table>
    <% if @user.name != "guestuser" && @user.id == current_user.id %>
      <%= link_to '登録情報編集', edit_user_path, class: "btn btn-sm btn-success" %>
      <%= link_to "ブックマーク一覧", book_marks_user_path(@user), class: "btn btn-sm btn-primary" %>
    <% end %>
    </div>
  </div>
</div>